<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gangChuFragment">

    <fragment
        android:id="@+id/friendFragment"
        android:name="com.incava.gangplace.view.FriendFragment"
        android:label="fragment_friend"
        tools:layout="@layout/fragment_friend" />
    <fragment
        android:id="@+id/gangChuFragment"
        android:name="com.incava.gangplace.view.GangChuFragment"
        android:label="fragment_gang_chu"
        tools:layout="@layout/fragment_gang_chu" >
        <action
            android:id="@+id/action_gangChuFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/rouletteFragment"
        android:name="com.incava.gangplace.view.RouletteFragment"
        android:label="fragment_roulette"
        tools:layout="@layout/fragment_roulette" />
    <fragment
        android:id="@+id/myInfoFragment"
        android:name="com.incava.gangplace.view.MyInfoFragment"
        android:label="fragment_my_info"
        tools:layout="@layout/fragment_my_info" />
    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.incava.gangplace.view.ReviewFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.incava.gangplace.view.SearchFragment"
        android:label="SearchFragment" />
</navigation>